# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
indent_style = tab
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Shell scripts must use LF
[*.sh]
end_of_line = lf

# JavaScript and CSS
[*.{js,css}]
end_of_line = lf

# JSON files
[*.json]
end_of_line = lf

# Markdown
[*.md]
trim_trailing_whitespace = false

# HTML
[*.html]
end_of_line = lf
